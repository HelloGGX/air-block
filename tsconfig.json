{
    "extends": ["@vue/tsconfig/tsconfig.dom.json", "@vue/tsconfig/tsconfig.lib.json"],
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": false,
        "strict": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "block/*": ["./block/src/*"]
        }
    },
    "include": ["**/*.ts", "block/src/*", "**/*.vue"],
    "exclude": ["node_modules", "dist"]
}
